<?xml version="1.0"?>
<sdf version="1.6">
    <model name="line_robot2">
        <pose>0 0 0.08 0 0 0</pose>
        <!-- <static>true</static> -->
        <link name="body_link">
            <pose>0 0 0 0 0 0</pose>
            <inertial>
                <pose>-0.1 0 0 0 0 0</pose>
                <mass>1.0</mass>
                <inertia>
                    <ixx>0.1</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.1</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.1</izz>
                </inertia>
            </inertial>
            <collision name="collision">
                <geometry>
                    <box>
                        <size>0.4 0.2 0.04</size>
                    </box>
                </geometry>
            </collision>
            <visual name="visual">
                <geometry>
                    <mesh>
                        <uri>model://line_robot2/meshes/car.dae</uri>
                    </mesh>
                </geometry>
                <material>
                    <script>
                        <uri>model://line_robot2/materials/scripts</uri>
                        <uri>model://line_robot2/materials/textures</uri>
                        <name>LineRobot2</name>
                    </script>
                </material>
            </visual>
        </link>
        <!-- lidar_link -->
        <link name="lidar_link">
            <!-- <pose>0.215 0 -0.03 0 0 3.1415</pose> -->
            <pose>0.215 0 -0.03 0 0 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.1</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.1</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.1</izz>
                </inertia>
            </inertial>
            <collision name="collision">
                <geometry>
                    <box>
                        <size>0.01 0.01 0.01</size>
                    </box>
                </geometry>
            </collision>
            <visual name="visual">
                <geometry>
                    <box>
                        <size>0.01 0.01 0.01</size>
                    </box>
                </geometry>
            </visual>
            <material>
                <script>
                    <uri>file://media/materials/scripts/gazebo.material</uri>
                    <name>Gazebo/Red</name>
                </script>
            </material>
            <!-- ray sensor -->
            <sensor name="sensor_ray" type="ray">
                <ray>
                    <scan>
                        <horizontal>
                            <samples>50</samples>
                            <resolution>1.0</resolution>
                            <min_angle>-0.5236</min_angle>
                            <max_angle>0.5236</max_angle>
                        </horizontal>
                        <!-- <vertical>
                            <samples>100</samples>
                            <resolution>1.0</resolution>
                            <min_angle>-0.5236</min_angle>
                            <max_angle>0.5236</max_angle>
                        </vertical> -->
                    </scan>
                    <range>
                        <min>0.05</min>
                        <max>30.0</max>
                    </range>
                    <update_rate>0.01</update_rate>
                </ray>
                <always_on>true</always_on>
                <plugin name="laserscan" filename="libgazebo_ros_ray_sensor.so">
                    <ros>
                        <namespace>/ray</namespace>
                        <remapping>~/out:=laserscan</remapping>
                    </ros>
                    <output_type>sensor_msgs/LaserScan</output_type>
                </plugin>
                <!-- <plugin name="range" filename="libgazebo_ros_ray_sensor.so">
                    <ros>
                        <namespace>/ray</namespace>
                        <remapping>~/out:=range</remapping>
                    </ros>
                    <output_type>sensor_msgs/Range</output_type>
                </plugin> -->
            </sensor>
        </link>
        <!-- end lidar -->

        <!-- camera(World) -->
        <link name="world_camera_link">
            <pose>0.2 0 5 0 1.5707 0</pose>
            <inertial>
                <mass>0.001</mass>
                <inertia>
                    <ixx>0.01</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.01</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.01</izz>
                </inertia>
            </inertial>
            <collision name="collision">
                <geometry>
                    <box>
                        <size>0.01 0.01 0.01</size>
                    </box>
                </geometry>
            </collision>
            <visual name="visual">
                <geometry>
                    <box>
                        <size>0.01 0.01 0.01</size>
                    </box>
                </geometry>
                <material>
                    <script>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                        <name>Gazebo/Blue</name>
                    </script>
                </material>
            </visual>

            <sensor type="camera" name="camera_world">
                <pose>-0.2 0 0 0 0 0</pose>
                <update_rate>10.0</update_rate>
                <always_on>true</always_on>
                <visualize>false</visualize>
                <camera name="head">
                    <horizontal_fov>0.64</horizontal_fov>
                    <image>
                        <width>720</width>
                        <height>480</height>
                        <format>R8G8B8</format>
                    </image>
                    <clip>
                        <near>0.221</near>
                        <far>300</far>
                    </clip>
                    <noise>
                        <type>gaussian</type>
                        <mean>0.0</mean>
                        <stddev>0.007</stddev>
                    </noise>
                </camera>
                <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                    <ros>
                        <namespace>demo_cam</namespace>
                        <remapping>image_raw:=image_demo</remapping>
                        <remapping>camera_info:=camera_info_demo</remapping>
                    </ros>
                </plugin>
            </sensor>
        </link>


        <link name="left_wheel_link">
            <pose>0 0.11 -0.03 1.5707 0 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.01</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.01</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.01</izz>
                </inertia>
            </inertial>
            <collision name="collision">
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.01</length>
                    </cylinder>
                </geometry>
            </collision>
            <visual name="visual">
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.01</length>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                        <name>Gazebo/Red</name>
                    </script>
                </material>
            </visual>
        </link>

        <link name="right_wheel_link">
            <pose>0 -0.11 -0.03 1.5707 0 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.01</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.01</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.01</izz>
                </inertia>
            </inertial>
            <collision name="collision">
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.01</length>
                    </cylinder>
                </geometry>
            </collision>
            <visual name="visual">
                <geometry>
                    <cylinder>
                        <radius>0.05</radius>
                        <length>0.01</length>
                    </cylinder>
                </geometry>
                <material>
                    <script>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                        <name>Gazebo/Red</name>
                    </script>
                </material>
            </visual>
        </link>

        <link name="caster_link">
            <pose>-0.15 0 -0.03 0 0 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.01</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.01</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.01</izz>
                </inertia>
            </inertial>
            <collision name="collision">
                <geometry>
                    <sphere>
                        <radius>0.05</radius>
                    </sphere>
                </geometry>
                <surface>
                    <friction>
                        <ode>
                            <mu>0.01</mu>
                            <mu2>0.01</mu2>
                        </ode>
                    </friction>
                </surface>
            </collision>
            <visual name="visual">
                <geometry>
                    <sphere>
                        <radius>0.05</radius>
                    </sphere>
                </geometry>
            </visual>
        </link>

        <link name="front_sensor_link">
            <pose>0.2 0 -0.03 0 1.5707 0</pose>
            <inertial>
                <mass>0.1</mass>
                <inertia>
                    <ixx>0.01</ixx>
                    <ixy>0.0</ixy>
                    <ixz>0.0</ixz>
                    <iyy>0.01</iyy>
                    <iyz>0.0</iyz>
                    <izz>0.01</izz>
                </inertia>
            </inertial>
            <collision name="collision">
                <geometry>
                    <box>
                        <size>0.02 0.16 0.02</size>
                    </box>
                </geometry>
            </collision>
            <visual name="visual">
                <geometry>
                    <box>
                        <size>0.02 0.16 0.02</size>
                    </box>
                </geometry>
                <material>
                    <script>
                        <uri>file://media/materials/scripts/gazebo.material</uri>
                        <name>Gazebo/Blue</name>
                    </script>
                </material>
            </visual>

            <sensor type="camera" name="camera1">
                <pose>-0.2 0 0 0 0 0</pose>
                <update_rate>10.0</update_rate>
                <always_on>true</always_on>
                <visualize>true</visualize>
                <camera name="head">
                    <horizontal_fov>0.64</horizontal_fov>
                    <image>
                        <width>100</width>
                        <height>1</height>
                        <format>R8G8B8</format>
                    </image>
                    <clip>
                        <near>0.221</near>
                        <far>300</far>
                    </clip>
                    <noise>
                        <type>gaussian</type>
                        <mean>0.0</mean>
                        <stddev>0.007</stddev>
                    </noise>
                </camera>
                <!-- <plugin
              name="h6x_internship_gazsebo"
              filename="libline_sensor_plugin.so"></plugin> -->
            </sensor>
        </link>
        <!-- line-robot -->
        <joint name='left_wheel_joint' type='revolute'>
            <parent>body_link</parent>
            <child>left_wheel_link</child>
            <pose>0 0 0.5 0 0 0</pose>
            <axis>
                <use_parent_model_frame>true</use_parent_model_frame>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>

        <joint name='right_wheel_joint' type='revolute'>
            <parent>body_link</parent>
            <child>right_wheel_link</child>
            <pose>0 0 0.5 0 0 0</pose>
            <axis>
                <use_parent_model_frame>true</use_parent_model_frame>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>

        <joint name='caster_joint' type='fixed'>
            <parent>body_link</parent>
            <child>caster_link</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <use_parent_model_frame>true</use_parent_model_frame>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>

        <joint name='front_sensor_joint' type='fixed'>
            <parent>body_link</parent>
            <child>front_sensor_link</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <use_parent_model_frame>true</use_parent_model_frame>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>

        <joint name='lidar_joint' type='fixed'>
            <parent>body_link</parent>
            <child>lidar_link</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <use_parent_model_frame>true</use_parent_model_frame>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>

        <joint name='world_camera_joint' type='fixed'>
            <parent>body_link</parent>
            <child>world_camera_link</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <use_parent_model_frame>true</use_parent_model_frame>
                <xyz>0 1 0</xyz>
            </axis>
        </joint>

        <plugin name='diff_drive' filename='libdiff_drive_controller_plugin.so'>
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>

            <wheel_separation>1.25</wheel_separation>
            <wheel_diameter>0.6</wheel_diameter>

            <max_wheel_torque>20</max_wheel_torque>
            <max_wheel_acceleration>1.0</max_wheel_acceleration>

            <!-- output -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <odometry_frame>odom_demo</odometry_frame>
            <robot_base_frame>chassis</robot_base_frame>
        </plugin>
        <!-- line-robot -->
        <plugin name="libgazebo_ros_p3d" filename="libgazebo_ros_p3d.so">
            <ros>
                <namespace>p3d</namespace>
                <remapping>odom:=odom</remapping>
            </ros>
            <frame_name>lidar_link</frame_name>
            <body_name>body_link</body_name>
            <update_rate>200.0</update_rate>
            <gaussian_noise>0.01</gaussian_noise>
        </plugin>

    </model>
</sdf>